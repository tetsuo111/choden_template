	display: block;
}
/*====================================================================
 *= フッター
 *====================================================================*/
.footer{
	/* footerを底に位置するため、高さ指定 */
	height : auto;
	/* bulmaの上書き */
	padding: 0;
}
/*====================================================================
 *= プログレスバー
 *====================================================================*/
.progressbar{
	border-bottom : 2px solid #eee;
	margin        : 4% auto;
	padding-bottom: 5%;
}

/* bulma 上書き */
.progressbar .columns{
	margin: auto 0;
}

.progress-current,
.progress-outside{
