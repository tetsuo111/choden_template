/* bulma 上書き */
.order-input .select select{
	padding-right: 9.3em;
}
 /*====================================================================
 *= メッセージ入力 パーツ化相談
 *====================================================================*/
.order-message .columns{
	margin-top: 1px;
}
.order-message-form-title{
	border: 1px solid #ddd;
	/* bulma上書き */
	padding: .5rem;
}
.order-message-form-input{
	padding-top   : .3rem;
	padding-bottom: .3rem;
}
.order-message-layout-title{
