}

.modal-sub-title{
	margin-top: 10px;
}

/*====================================================================
 *= 上下中央寄せ
 *====================================================================*/

/* is-flex に付け加え */
.ud-center{
	align-items    : center;
	display        : -webkit-box;
	display        : -ms-flexbox;
	display        : flex;
	justify-content: center;
}

/*====================================================================
 *= 各ページボタン(大きさはブロックで調整)
 *====================================================================*/

/* button 標準サイズ 名前は相談  */
.button1,
.button2{
	width: 100%;
}

.button1:hover,
.button2:hover{
	opacity: 0.6;
}

/*--------------------------------------------------------------------
 *- ページトップへ戻るボタン
 *--------------------------------------------------------------------*/
.page-top{
	border-radius  : 5px;
	position       : fixed;
	right          : 0;
	bottom         : 0;
	text-decoration: none;
	width          : 10%;
}

.page-top img {
	border-radius: 20px;
	height       : 40px;
	width        : 40px;
}
/*--------------------------------------------------------------------
 *- チェックボックス(order.html 利用規約)
 *--------------------------------------------------------------------*/
/* order.html 利用規約 checkbox */
.order-confrim-check{
	width       : 30px;
	height      : 30px;
	margin-right: 3%;
}
/*--------------------------------------------------------------------
 *- ラジオボタン(order.html メッセージ)
 *--------------------------------------------------------------------*/
.radio {
	border-radius: 100%;
	border       : 1px solid #666;
	cursor       : pointer;
	display      : inline-block;
	height       : 15px;
	overflow     : hidden;
	position     : relative;
	top          : 3px;
	width        : 15px;
}

.radio:before {
	background-color: #0084d4;
	border-radius   : 100%;
	content         : '';
	display         : block;
	height          : 11px;
	position        : absolute;
	top             : 1px;
	left            : 1px;
	width           : 11px;
	z-index         : 1;
}

.radio input[type="radio"] {
	-moz-appearance   : none;
	-webkit-appearance: none;
	box-shadow        : 20px 0px #fff;
	display           : block;
	height            : 20px;
	position          : absolute;
	/* チェックされていない方の色を飛ばすために付与 */
	left              : -23px;
	width             : 20px;
	z-index           : 2;
}

.radio input[type="radio"]:checked {
	box-shadow : none;
}

.radio input[type="radio"]:focus {
	box-shadow: 20px 0px #fff;
	opacity   : 0.2;
}
/*====================================================================
 *= ラベル
 *====================================================================*/
/* bootstrapからもらってきたもの */
.order-label{
	border-radius : .25em;
	float         : right;
	padding       : .2em .6em .3em;
	text-align    : center;
	vertical-align: baseline;
	white-space   : nowrap;
}
/*####################################################################
 *### ブロック
 *####################################################################*/

/*====================================================================
 *= ヘッダー
 *====================================================================*/
.header,
.header-link{
	height: 80px;
}

.header{
	background-image : url(../img/hakuzennsya_header.png);
	background-repeat: no-repeat;
	background-size  : 100% 100%;
}

/* TODO 高さ調整 */
