/*####################################################################
 *### パーツ
 *####################################################################*/

/*====================================================================
 *= メインタイトル
 *====================================================================*/
.main-title{
	text-align: center;
}

/* 相談事項 */
@media screen and (max-width: 768px){
	.main-title-sub-text{
		display  : block;
	}
}
/*====================================================================
 *= サブタイトル
 *====================================================================*/

/* 基準サブタイトル */
.sub-title,
.modal-sub-title{
	border-left  : 10px solid #0084d4;
	padding-left : 15px;
}
.hall-info .sub-title,
.hall-list .sub-title,
.funeral-list .sub-title{
