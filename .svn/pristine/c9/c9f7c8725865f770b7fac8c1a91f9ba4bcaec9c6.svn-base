/*####################################################################
 *###共通 背景色、文字サイズ、文字色、画面幅等
 *####################################################################*/

/*bulma 追加*/
.main{
	margin-top: 1rem;
	/*footerを底につける*/
	min-height: calc(100vh - 100px);
}

/*====================================================================
 *= 文字サイズ
 *====================================================================*/

.main-title-main-font{
	font-size: 1.75rem;
}

.sub-title,
.modal-sub-title,
.footer-company{
	font-size: 1.5rem;
}

.funeral-list-deceasedname{
	font-size  : 1.125rem;
}

@media screen and (max-width: 768px){
	.main-title-main-font{
		font-size: 1.5rem;
	}

	.sub-title,
	.modal-sub-title,
	.footer-company{
		font-size: 1.25rem;
	}

	.funeral-list-deceasedname{
		font-size: 1rem;
	}

	.footer-address,
	.footer-tel,
	.hall-info-detail-header,
	.hall-info-detail-data,
	.hall-list-name,
	.funeral-list-block,
	.caution-text,
	.button-apply{
		font-size: 0.875rem;
	}

}

/*====================================================================
 *= 背景
 *====================================================================*/

/* 青 */
.main-title,
.footer,
.button-apply{
	background: #08d;
}

/* グレー */
.hall-info-detail-header,
.hall-list-name,
.funeral-list-body{
	background: #eee;
}

@media screen and (max-width: 768px){

/* index.html 葬儀リスト スマホ対応 */
	.funeral-list-body{
		background: white;
	}

	.funeral-list-body-left{
		background: #eee;
	}

	.funeral-list-body-right{
		background: white;
	}
}
/*====================================================================
 *= 文字色
 *====================================================================*/

/* 白 */
.main-title,
.footer-company,
.footer-address,
.footer-tel,
.button-apply{
	color: white;
}

/* 赤 注意文等 */
.caution-text{
	color: red;
}

/*====================================================================
 *= 画面幅
 *====================================================================*/

/* 画面幅を博善社ホームページに合わせるため変更 */
/* bulma 上書き */
@media screen and (max-width: 768px){
	.container{
		margin-right: 0.95rem;
		margin-left : 0.95rem;
	}
}

@media (min-width: 768px) {
	.container {
		width: 450px;
	}
}

@media (min-width: 992px) {
	.container {
		width: 670px;
	}
}

@media (min-width: 1200px) {
	.container {
		width: 870px;
	}
}

/*====================================================================
 *= 共通tips
 *====================================================================*/

/*--------------------------------------------------------------------
 *- サブタイトル
 *--------------------------------------------------------------------*/

/*基準サブタイトル*/
.sub-title,
.modal-sub-title{
	border-left  : 10px solid #0084d4;
	height       : 50px;
	padding-top  : 5px;
	padding-left : 15px;
}
.hall-info .sub-title,
.hall-list .sub-title,
.funeral-list .sub-title{
	margin-bottom: 1.5rem;
}

.modal-sub-title{
	margin-top: 0.8rem;
}
/*--------------------------------------------------------------------
 *- 上下中央寄せ
 *--------------------------------------------------------------------*/
/*is-flex に付け加え*/
.ud-center{
	align-items    : center;
	display        : -webkit-box;
	display        : -ms-flexbox;
	display        : flex;
	justify-content: center;
}

/*--------------------------------------------------------------------
 *- 各ページボタンシリーズ
 *--------------------------------------------------------------------*/

/* 基準ボタン */
.button-apply{
	width: 100%;
}

/* モーダルボタン 基準 */
.button-modal,
.button-modal-close{
	color: #0084d4;
}

/* item.html 商品選択ボタン */
.item .button-apply{
	width: 80%;
}

.button-modal-close{
	width: 40%;
}

.button-apply:hover,
.button-modal:hover,
.button-modal-close:hover{
	color     : white;
	opacity: 0.6;
}

.button-modal:hover,
.button-modal-close:hover{
	background: #0084d4;

}

@media screen and (max-width: 768px){
	.sub-title,
	.modal-sub-title{
		height       : 30px;
		margin-bottom: 1.125rem;
		padding-top  : 0;
		padding-left : 10px;
	}

	.button-apply{
		width: 70%;
	}

	.item .button-apply{
		width: 60%;
	}
}

/*====================================================================
 *= ヘッダー
 *====================================================================*/

.header,
.header-link{
	height: 80px;
}

.header{
	background-image : url(../img/hakuzennsya_header.png);
	background-repeat: no-repeat;
	background-size  : 100% 100%;
}

/*TODO 高さ調整*/
.header-link{
	display: block;
}

@media screen and (max-width: 768px){
	.header,
	.header-link{
		height: 50px;
	}
}

/*====================================================================
 *= フッター
 *====================================================================*/

.footer{
	/* footerを底に位置するため、高さ指定 */
	height : auto;
	/* bulmaの上書き */
	padding: 0;
}

/* bulmaの上書き */
.footer-title{
	margin-bottom: 0.5rem;
}

@media screen and (max-width: 768px){
	.footer{
		/* bulmaの上書き */
		padding: 0.2rem;
	}

	.footer-title{
		margin-bottom: 0.25rem;
	}
}

/*====================================================================
 *= メインタイトル
 *====================================================================*/

.main-title{
	text-align: center;
}

@media screen and (max-width: 768px){
	.main-title-sub-text{
		display  : block;
		font-size: 0.875rem;
	}
}

/*####################################################################
 *### index.html
 *####################################################################*/

/*====================================================================
 *= ホール情報
 *====================================================================*/

.hall-info{
	margin-top   : 1.5rem;
	margin-bottom: 4rem;
}

/*--------------------------------------------------------------------
 *- 詳細情報
 *--------------------------------------------------------------------*/
.hall-info-detail-header{
	border        : 1px solid #ddd;
	/* bulma 上書き */
	padding-top   : 0.625rem;
	padding-bottom: 0.625rem;
}

@media screen and (max-width: 768px){
	.hall-info{
		margin-top   : 0.65rem;
		margin-bottom: 1.5rem;
	}

	/* bulma上書き */
	.columns .all-info-detail{
		margin-left : 0;
		margin-right: 0;
	}

	/* bulma上書き */
	.column .hall-info-detail-header,
	.column .hall-info-detail-data{
		padding-top   : 0;
		padding-bottom: 0;
	}

	.hall-info-image{
		width: 70%;
	}
}

/*====================================================================
 *= ホールリスト
 *====================================================================*/
/* bulma上書き */
a.hall-list-name:hover{
	background: #67b9ea;
	color     : white;
}

/*====================================================================
 *= 葬儀一覧
 *====================================================================*/
.funeral-list-block{
	margin-bottom: 30px;
}

.funeral-list-header,
.funeral-list-deceasedname{
	font-weight: bold;
}

.funeral-list-body{
	border      : 1px solid #ddd;
	margin-top  : 5px;
	margin-right: 0;
	margin-left : 0;
}

@media screen and (max-width: 768px){
	.funeral-list-header{
		border-top : 3px solid #eee;
		margin-top : 1.125rem;
		padding-top: 0.5rem;
	}
	.funeral-list-body{
		border: none;
	}

	.funeral-list-body-left{
		border: 1px solid #ddd;
	}

	.funeral-list-body-right{
		text-align: center;
	}
}

/*####################################################################
 *### item.html
 *####################################################################*/

.item{
	margin-top: 1.5rem;
}

/*--------------------------------------------------------------------
 *- 商品タイトル及び商品価格
 *--------------------------------------------------------------------*/
/* bulma上書き */
.table .item-title,
.table .item-price{
	background : #eee;
	border     : 1px solid #ddd;
	text-align : center;
	font-weight: normal;
	width      : 50%;
}

.item-image{
	width: 80%;
}

.item-form{
	margin-top: 1.5rem;
}
@media screen and (max-width: 768px){
	/*bulma 上書き*/
	.table .item-title,
	.table .item-price{
		padding: .3em .75em;
	}

}
/*--------------------------------------------------------------------
 *- モーダル
 *--------------------------------------------------------------------*/
.modal-image{
	width: 70%;
}

.modal-big-image{
	border       : 5px solid #ddd;
	margin-bottom: 1.5rem;
}

.modal-detail-text{
	margin-left: 1.5rem;
}

ul.modal-detail-text{
	/* bulma 上書き */
	list-style : inherit;
	margin-left: 2.9rem;
}
.modal-detail-text li{
	font-size: 0.875rem;
}

.modal-footer{
	padding-top: 2rem;
	margin-top: 1.5rem;
	border-top: 1px solid #ddd;
}
/* bulma上書き */
@media screen and (min-width: 769px), print {
	.modal-content{
    	width: 800px;
	}
}