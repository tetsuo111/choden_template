/*詳細情報*/
.hall-info-detail-header{
	border: 1px solid #ddd;
}

@media screen and (max-width: 768px){
	.column .hall-info-detail-header,
	.column .hall-info-detail-data{
		padding-top   : 0;
		padding-bottom: 0;
		margin-left   : 15px;
		margin-right  : 15px;
	}
}
